{% extends 'base.html.twig' %}

{% block title %}Add Quiz{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Add Quiz</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_row(form.title, {'label': 'Title:', 'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.lesson, {'label': 'Lesson:', 'attr': {'class': 'form-control mb-3'}}) }}
                <button type="submit" class="btn btn-primary mb-3">Add Quiz</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
