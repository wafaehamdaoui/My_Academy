
{% extends 'base.html.twig' %}
{%block header%}
{%endblock%}
{% block body %}
    <div class="container mt-12">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><h1>New Quiz</h1></div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3 mt-3">
                            {{ form_label(form.title, 'Title') }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.lesson, 'Lesson') }}
                            {{ form_widget(form.lesson, {'attr': {'class': 'form-control', 'rows': 7}}) }}
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{%block footer%}
{%endblock%}