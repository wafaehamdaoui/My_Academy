{% extends 'base.html.twig' %}
{%block header%}
{%endblock%}
{% block body %}
    <h1 class="text-center">Edit Question "{{ question.question }}"</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
                {{ form_row(form.question, { 'label': 'Question', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.choice1, { 'label': 'Choice 1', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.choice2, { 'label': 'Choice 2', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.choice3, { 'label': 'Choice 3', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.response, { 'label': 'Response', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.quiz, { 'label': 'quiz', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form._token) }}
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <a href="{{ path('Categories') }}">Back to Category list</a>
{% endblock %}
{%block footer%}
{%endblock%}