{% extends 'base.html.twig' %}

{% block title %}{{ lesson.title }}{% endblock %}
{%block header%}
{%endblock%}
{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>{{ lesson.title }}</h1>
      <p>{{ lesson.content }}</p>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="{{ lesson.video }}" allowfullscreen></iframe>
      </div>
      
      <h2>Quizzes</h2>
      {% if lesson.quizzes is not empty %}
      <ul>
        {% for quiz in lesson.quizzes %}
        <li>{{ quiz.title }}</li>
        <div class="btn-group">
            <a href="{{ path('showQuiz', {'id': quiz.id}) }}" class="btn btn-sm btn-outline-secondary">Take Quiz</a>
        </div>
        {% endfor %}
        
      </ul>
      {% else %}
      <p>No quizzes yet</p>
      {% endif %}
      
    </div>
  </div>
</div>
{% endblock %}
{%block footer%}
{%endblock%}