{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Edit User "{{ user.name }}"</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
                {{ form_row(form.name, { 'label': 'Name', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.email, { 'label': 'Email', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form.password, { 'label': 'Password', 'attr': {'class': 'form-control mb-3','type': 'hidden'} }) }}
                {{ form_row(form.role, { 'label': 'Role', 'attr': {'class': 'form-control mb-3'} }) }}
                {{ form_row(form._token) }}
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <a href="{{ path('allUsers') }}">Back to user list</a>
{% endblock %}
