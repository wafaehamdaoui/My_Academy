
{% extends 'base.html.twig' %}

{% block header %}
{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-center" style="height: 100vh;">
  <div>
    <div class="container">
  <div class="row">
    
      <h1 class="text-center">Contact Us</h1>
      {{ form_start(commentForm) }}
        <div class="form-group">
          {{ form_label(commentForm.name) }}
            {{ form_widget(commentForm.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
          {{ form_label(commentForm.email) }}
            {{ form_widget(commentForm.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
          {{ form_label(commentForm.message) }}
            {{ form_widget(commentForm.message, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <button type="submit" class="btn btn-primary mt-4 mb-5">Send Message</button>
      {{ form_end(commentForm) }}
    
  </div>
</div>
  </div>
</div>

{% endblock %}
