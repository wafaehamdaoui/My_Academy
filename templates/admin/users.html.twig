{% extends 'dashboard.html.twig' %}
{% block body %}
    <h1 class="my-4">List of users</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="{{ path('user_delete', {'id': user.id}) }}" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            {% for message in app.session.flashbag.get('success') %}
              <div class="alert alert-success">
                {{ message }}
              </div>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success mt-2 mb-3 col-2 " href="{{ path('NewUser') }}">Add New User</a>
{% endblock %}
