{% extends 'dashboard.html.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <h2>List of Courses</h2>
       <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
              <tr>
                <td>{{comment.id}}</td>
                <td>{{comment.name}}</td>
                <td>{{comment.email}}</td>
                <td>{{comment.message}}</td>
                <td>
                <a href="{{path('comment_delete',{'id':comment.id})}}" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</a></td>
              </tr>
            {% endfor %}
            
            </tbody>
          </table>
          <a class="btn btn-danger mt-2 mb-3 col-2 " onclick="return confirm('Are you sure?')" href="{{ path('deleteAllComments') }}">Delete All</a>
           {% for message in app.session.flashbag.get('success') %}
              <div class="alert alert-success">
                {{ message }}
              </div>
            {% endfor %}
    </div>
  </div>
{%endblock%}