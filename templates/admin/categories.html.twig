{% extends 'dashboard.html.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <h2> List of Categories</h2>
       <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Course Count</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
            {% for category in categories %}
              <tr>
                <td>{{category.id}}</td>
                <td>{{category.name}}</td>
                <td>{{category.courses | length}}</td>
                <td><a href="{{path('category_edit',{'id':category.id})}}" class="btn btn-sm btn-primary">Edit</a>
                <a href="{{path('category_delete',{'id':category.id})}}" class="btn btn-danger btn-sm">Delete</a></td>
              </tr>
            {% endfor %}
            {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
            {{ message }}
            </div>
        {% endfor %}
            </tbody>
          </table>
          <a class="btn btn-success mt-2 mb-3 col-3 " href="{{ path('addCategory') }}">Add New Category</a>
    </div>
  </div>
{%endblock%}