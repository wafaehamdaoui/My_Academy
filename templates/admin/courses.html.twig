{% extends 'dashboard.html.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <h2>List of Courses</h2>
       <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Course Name</th>
                <th>Category</th>
                <th>Enrollment Count</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
            {% for course in courses %}
              <tr>
                <td>{{course.id}}</td>
                <td>{{course.title}}</td>
                <td>{{course.category.name}}</td>
                <td>{{course.users | length}}</td>
                <td><a href="{{path('course_edit',{'id':course.id})}}" class="btn btn-sm btn-primary">Edit</a>
                <a href="{{path('course_delete',{'id':course.id})}}" class="btn btn-danger btn-sm">Delete</a></td>
              </tr>
            {% endfor %}
            </tbody>
          <table>
          <a class="btn btn-success mt-2 mb-3 col-2 " href="{{ path('NewCourse') }}">Add New Course</a>
    </div>
  </div>
{%endblock%}