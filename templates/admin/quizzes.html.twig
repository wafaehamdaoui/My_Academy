{% extends 'dashboard.html.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <h2>List of Questions</h2>
       <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Quiz title</th>
                <th>Lesson</th>
                <th>Questions Count</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
              <tr>
                <td>{{quiz.id}}</td>
                <td>{{quiz.title}}</td>
                <td>{{quiz.lesson.title}}</td>
                <td>{{quiz.questions | length}}</td>
                <td><a href="{{path('quiz_edit',{'id':quiz.id})}}" class="btn btn-sm btn-primary">Edit</a>
                <a href="{{path('quiz_delete',{'id':quiz.id})}}" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</a></td>
              </tr>
            {% endfor %}
            {% for message in app.session.flashbag.get('success') %}
              <div class="alert alert-success">
                {{ message }}
              </div>
            {% endfor %}
            </tbody>
          </table>
          <a class="btn btn-success mt-2 mb-3 col-2 " href="{{ path('addQuiz') }}">Add New Quiz</a>
    </div>
  </div>
{%endblock%}