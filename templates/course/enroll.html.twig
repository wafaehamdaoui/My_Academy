{% extends 'base.html.twig' %}

{% block title %}Enroll in {{course.title}} | My Platform{% endblock %}

{% block body %}
<section class="enroll">
    <div class="container">
        <h1>Enroll in {{course.title}}</h1>
        <form action="#" method="POST">
            <div class="form-group">
                <label for="name">Full Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email Address:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="card">Credit Card Number:</label>
                <input type="text" class="form-control" id="card" name="card" required>
            </div>
            <div class="form-group">
                <label for="exp">Expiration Date:</label>
                <input type="text" class="form-control" id="exp" name="exp" required>
            </div>
            <div class="form-group">
                <label for="cvv">CVV:</label>
                <input type="text" class="form-control" id="cvv" name="cvv" required>
            </div>
            <button type="submit" class="btn btn-primary">Enroll Now</button>
        </form>
    </div>
</section>
{% endblock %}