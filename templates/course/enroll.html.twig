{% extends 'base.html.twig' %}

{% block title %}Enroll in {{ course.title }} | ALI_ACADEMY{% endblock %}
{%block header%}
{%endblock%}
{% block body %}
<section class="enroll">
  {% if form_errors(form) %}
    <div class="alert alert-danger">
        <ul>
        {% for error in form_errors(form) %}
            <li>{{ error.message }}</li>
        {% endfor %}
        </ul>
    </div>
  {% endif %}

    <div class="container">
        <h1>Enroll in {{ course.title }} Course</h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.cardNbr) }}
            {{ form_widget(form.cardNbr, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <p>Don't have an account yet? <a href="{{ path('register') }}">Register now</a></p>
        </div>
        <button type="submit" class="btn btn-primary">Enroll Now</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
{% block footer %}
{% endblock %}